@model MotCreateViewModel

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/mot", "Mot"), ("","Create") })>

<h3 class="mt-4 mb-4">Create MOT</h3>

<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mt-3">
        <div class="mt-3">
            <label asp-for="DateOfMOT" class="form-label"></label>
            <input asp-for="DateOfMOT" class="form-control"/>
            <span asp-validation-for="DateOfMOT" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="TesterName" class="form-label"></label>
            <input asp-for="TesterName" class="form-control"/>
            <span asp-validation-for="TesterName" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="TestStatus" class="form-label"></label>
            <input asp-for="TestStatus" class="form-control"/>
            <span asp-validation-for="TestStatus" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="TestReport" class="form-label"></label>
            <input asp-for="TestReport" class="form-control"/>
            <span asp-validation-for="TestReport" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Mileage" class="form-label"></label>
            <input asp-for="Mileage" class="form-control"/>
            <span asp-validation-for="Mileage" class="text-danger"></span>
        </div>
    </div>
   
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}